{% macro post_list(posts=[], category="") %}
  {% if posts.length %}
    <ul data-category="{{ category }}">
    {% for post in posts %}
      <li><a href="{{ post.url | url }}">{{ post.data.title | safe }}</a><br/>
        {{ post.data.duration}}min &middot; {{ post.data.tags | filter_tags }} &middot; Ep{{ post.data.episode }}</li>
    {% endfor %}
    </ul>
  {% else %}
    <!-- no "{{ category }}" posts -->
  {% endif %}
{% endmacro %}

{% macro tag_list(tags=[], category="") %}
  {%- set tags = tags | filter_tags -%}
  {% if tags.length %}
    <ul data-category-tags="{{ category }}">
    {% for tag in tags %}
      <li><a href="/{{ category | slug }}/tag/{{ tag | slug }}/" class="tag">{{ tag }}</a></li>
    {% endfor %}
    </ul>
  {% else %}
    <!-- no "{{ category }}" tags -->
  {% endif %}
{% endmacro %}
